generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model Product {
  id               String   @id @default(uuid())
  name             String
  suggestion_price Int
  image_url        String
  link_shopee      String
  category_product Category
  is_active        Boolean  @default(true)
  selected_by_id   String?
  selected_by      User?    @relation(fields: [selected_by_id], references: [id])
  selected_at      DateTime?      // <- adiciona aqui
  created_at       DateTime @default(now())
}


model User {
  id        String   @id        
  email     String?  @unique
  products  Product[]
}

enum Category {
  Cozinha
  Sala
  Ferramentas
  Banheiro
  Outros
}

